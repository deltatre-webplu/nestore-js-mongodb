{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "../lib",
        "types": [
            "node",
            "mocha"
        ]
    },
    "exclude": [
        "**/*.d.ts",
        "../node_modules"
    ],
    "compileOnSave": true
}